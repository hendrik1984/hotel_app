<%= form_with(model: user_role, class: "contents") do |form| %>
  <% if user_role.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user_role.errors.count, "error") %> prohibited this user_role from being saved:</h2>

      <ul>
        <% user_role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :role_id %>
    <%= form.text_field :role_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="flex flex-row items-center my-5 gap-x-2">
    <%= form.check_box :access_add, class: "block shadow rounded-md border border-gray-400 outline-none" %>
    <%= form.label :access_add %>
  </div>

  <div class="flex flex-row items-center my-5 gap-x-2">
    <%= form.check_box :access_edit, class: "block shadow rounded-md border border-gray-400 outline-none" %>
    <%= form.label :access_edit %>
  </div>

  <div class="flex flex-row items-center my-5 gap-x-2">
    <%= form.check_box :access_update, class: "block shadow rounded-md border border-gray-400 outline-none" %>
    <%= form.label :access_update %>
  </div>

  <div class="flex flex-row items-center my-5 gap-x-2">
    <%= form.check_box :access_delete, class: "block shadow rounded-md border border-gray-400 outline-none" %>
    <%= form.label :access_delete %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
