<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  
  <img class="rounded-t-lg" src="<%= asset_path('john_wick.jpg') %>" alt="" />
  
  <div class="p-5">
      <a href="#">
          <h5 class="mb-2 text-2xl tracking-tight text-gray-900 dark:text-white"><%= user.email %></h5>
      </a>

      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        Name: <%= user.profile.nil? ? '-' : "#{user.profile.first_name} #{user.profile.last_name}"  %>
      </p>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        Status: Active or Blocked (implement this feature later)
      </p>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
        Role: <%= user.profile.nil? ? '-' : "#{user.profile.role}"  %>
      </p>

      <% if user.profile.nil? %>
        <%= link_to '<svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
            </svg> Edit'.html_safe, new_profile_path(:users_id => user.id), 
            class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800",
            data: { turbo_frame: "content_turbo_frame" } %>
      <% else %>
        <%= link_to '<svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
            </svg> Edit'.html_safe, edit_profile_path(user.profile.id), 
            class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800",
            data: { turbo_frame: "content_turbo_frame" } %>
      <% end %>
  </div>
</div>

