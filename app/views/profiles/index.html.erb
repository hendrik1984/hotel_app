<%= turbo_frame_tag "content_turbo_frame" do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% content_for :title, "Profiles" %>

    <div class="flex justify-between items-center mb-4">
      <h1 class="font-bold text-4xl">User Profiles</h1>
    </div>

    <div id="profiles" class="flex flex-wrap gap-2">
      <% if @users.present? %>
        <% @users.each do |user| %>
          <%= render 'user_profile', user: user %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
