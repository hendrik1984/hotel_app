<%= form_with(model: hotel, class: "contents") do |form| %>
  <% if hotel.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul class="list-disc list-inside ml-4">
        <% hotel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_area :address, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :geolocation %>
    <%= form.text_field :geolocation, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :descriptions %>
    <%= form.text_area :descriptions, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :country %>
    <%= select_tag(:country, options_for_select([['Select', ''], ['Indonesia', 'indonesia'], ['Japan', 'japan']]), class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full") %>
  </div>

  <div class="my-5">
    <%= form.label :score %>
    <%= form.text_field :score, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to 'Cancel',
                  hotels_path,
                  data: { turbo_frame: "content_turbo_frame" },
                  class: "rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer"
              %>
  </div>
<% end %>

