<%= turbo_frame_tag "content_turbo_frame_new_role" do %>
  <%= form_with(model: role, class: "contents") do |form| %>
    <% if role.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

        <ul>
          <% role.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex flex-row gap-2 items-center mt-2 mb-2">
        <%= form.label :name %>
        <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 w-full" %>
        <%= form.submit class: "rounded-lg py-3 px-5 bg-yellow-100 inline-block font-medium" %>
    </div>
  <% end %>
<% end %>
